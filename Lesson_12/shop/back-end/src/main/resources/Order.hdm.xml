<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.senla.model.Order" table="book_order">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <list name="books" cascade="all">
            <key column="id"/>
            <list-index column="orderId"/>
            <many-to-many column="bookId" class="com.senla.model.Book"/>
        </list>
        <property name="status" column="status" type="org.hibernate.type.EnumType"/>
        <property name="dateExecuted" column="dateExecuted" type="date"/>
        <property name="price" column="price" type="int"/>
    </class>

    <class name="com.senla.model.Book" table="book">
        <meta attribute="class-description">
            This class contains reader records.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="isStore" column="isStore" type="boolean"/>
        <property name="dateReceipted" column="dateReceipted" type="date"/>
        <property name="datePublished" column="datePublished" type="date"/>
        <property name="price" column="price" type="int"/>
    </class>
</hibernate-mapping>